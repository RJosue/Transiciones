<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Registar Usuario</title>
    <script src="https://code.jquery.com/jquery-3.4.1.js"></script>
    <script src="//cdn.plugdo.com/js/plugdo-dependency.min.js"></script>
    <script src="//cdn.plugdo.com/release/2.6/plugdoeui.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <style type="text/css">
        .shadow {
            background-color: #f9f9f9;
            margin-top: 10x;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            padding: 12px 16px 24px;
        }
        .btncrear{
            background-color: #1f4394;
            width: 15rem;
        }
        </style>
</head>
<body>
        
    </style>
</head>

<body>
    <div class="container shadow mt-3">

        <br>
        <h2 class="text-center">Crear Participante</h2>
        <form class="form-horizontal mx-auto" id="formCrearCandidato "   method="post">
            <div class="form-group row">
                
                <div class="col-sm-6">
                        <label class="control-label col-sm-2" for="nombre">*Nombre:</label>
                    <input type="text" class="form-control"  id="nombre" name="Cname"  eui-bind="requestForm.Cname" placeholder="Introduzca su nombre" required>
                    <label class="control-label col-sm-5"  id="errorNombre"></label>
                </div>
                <div class="col-sm-6">
                        <label class="control-label col-sm-2" for="apellido">*Apellido:</label>
                    <input type="text" class="form-control" id="apellido" name="Capellido" eui-bind="requestForm.Capellido" placeholder="Introduzca su apellido" required>
                    <label class="control-label col-sm-5" id="errorApellido"></label>
                </div>
            </div>
            <div class="form-group row">
                    <div class="col-sm-12">
                        <label class="control-label col-sm-4" for="fechanacimineto">Fecha de Nacimineto:</label>
                        <input type="date" class="form-control" id="fechanacimineto"  name="Cfechanacimineto"  eui-bind="requestForm.Cfechanacimineto">
                    </div>
            </div>
            <div class="form-group row">
                    <div class="col-sm-6">
                        <label class="control-label col-sm-2" for="escSexo">*Sexo:</label>
                        <select class="custom-select" id="escoSexo" name="CescoSexo" eui-bind="requestForm.CescoSexo" required>
                            <option selected disabled value="">Seleccione su sexo</option>
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                        <label class="control-label col-sm-5" id="errorSexo"></label>
                    </div>
                    <div class="col-sm-6">
                        <label class="control-label col-sm-2" for="genero">Genero:</label>
                        <input type="text" class="form-control" id="genero" name="Cgenero"  eui-bind="requestForm.Cgenero">
                    </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label class="control-label col-sm-2" for="puesto">Puesto:</label>
                    <input type="text" class="form-control" id="puesto"  name="Cpuesto"  eui-bind="requestForm.Cpuesto" placeholder="Introduzca su puesto de trabajo" >
                </div>
                <div class="col-sm-6">
                    <label class="control-label col-sm-2" for="referencia">Referencia:</label>
                    <input type="text" class="form-control" id="referencia" name="Creferencia"  eui-bind="requestForm.Creferencia" placeholder="Referido por:" >
                </div>
            </div>
            <div class="form-group row">
                <label class="control-label col-sm-2" for="correo">*Correo:</label>
                <div class="col-sm-12">
                    <input type="email" class="form-control" id="correo"  name="Ccorreo"  eui-bind="requestForm.Ccorreo" placeholder="Introduzca su correo" required>
                    <label class="control-label col-sm-5" id="errorCorreo"></label>
                </div>
            </div>
            <div class="form-group row">
                
            </div>
            <div class="form-group row">
                <label class="control-label col-sm-2" for="nivelAcademico">Nivel academico:</label>
                <div class="col-sm-12">
                    <select class="custom-select" id="nivelAcademico" name="CnivelAcademico" eui-bind="requestForm.CnivelAcademico" required>
                        <option selected disabled value="">Escoga su nivel academico</option>
                        <option value="1">No califico</option>
                        <option value="2">Primaria</option>
                        <option value="3">Pre-media</option>
                        <option value="4">Media</option>
                        <option value="5">Universidad (en curso)</option>
                        <option value="6">Universidad Completada</option>
                    </select>
                </div>
                <label class="control-label col-sm-2" id="errorNivel"></label>
        </div>
        <div class="row">
            <button id="btnCrear" type="submit" class="btn btn-primary mx-auto btncrear">Guardar</button>
        </div>
        </form>
     </div>   
</body>
<script>
    let {request} = plugdo;
</script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.1/dist/jquery.validate.js"></script>
<script src="/dev/js/registro-candidato.js"></script>
</html>